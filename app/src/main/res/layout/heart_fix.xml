<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a10767.electronic_wardrobe.Main_Fragment.HeartLayoutActivity">
    <!--标题栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:background="#6eaff1">

        <LinearLayout
            android:id="@+id/heart_fix_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/left_arrows_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/jacket_return"
                android:layout_gravity="center"
                android:layout_toLeftOf="@id/jacket_search"
                android:layout_toStartOf="@id/jacket_search"
                android:text="返回"
                android:textColor="#ffffff"
                android:textSize="18dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="心得体会"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/heart_finish"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:gravity="center"
            android:text="保存"
            android:textColor="#fff"
            android:textSize="18dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/heart_fix_IMG"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <EditText
        android:id="@+id/heart_fix_TEXT"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:maxLines="9"
        android:hint="在这里编写心得体会"
        android:layout_weight="3"
        android:gravity="center" />
</LinearLayout>
